@model MvcMovie.Models.MovieGenreViewModel;

@{
    ViewData["Title"] = "My Movies";
}

<div class="container">
    <h1 class="my-4">Movies List</h1>
    <div class="mb-3">
        <a class="btn btn-primary" asp-action="Create">Create New</a>
    </div>
    <form asp-controller="Movies" asp-action="Index" method="get" class="row g-3 align-items-end mb-4">
        <div class="col-auto">
            <label for="MovieGenre" class="form-label">Genre</label>
            <select asp-for="MovieGenre" asp-items="Model.Genres" class="form-select" id="MovieGenre">
                <option value="">All</option>
            </select>
        </div>
        <div class="col-auto">
            <label for="SearchString" class="form-label">Title</label>
            <input type="text" name="SearchString" class="form-control" id="SearchString" />
        </div>
        <div class="col-auto">
            <input type="submit" value="Filter" class="btn btn-outline-primary" />
        </div>
    </form>
    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle" id="moviesTable">
            <thead>
                <tr>
                    <th style="cursor:pointer;" data-column="Title">
                        @Html.DisplayNameFor(model => model.Movies![0].Title)
                    </th>
                    <th style="cursor:pointer;" data-column="ReleaseDate">
                        @Html.DisplayNameFor(model => model.Movies![0].ReleaseDate)
                    </th>
                    <th style="cursor:pointer;" data-column="Genre">
                        @Html.DisplayNameFor(model => model.Movies![0].Genre)
                    </th>
                    <th style="cursor:pointer;" data-column="Price">
                        @Html.DisplayNameFor(model => model.Movies![0].Price)
                    </th>
                    <th style="cursor:pointer;" data-column="Rating">
                        @Html.DisplayNameFor(model => model.Movies![0].Rating)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
@foreach (var item in Model.Movies!) 
{
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ReleaseDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Genre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Rating)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary me-1">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary me-1">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
}
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script type="module">
        import { enableTableSort } from '/js/table-sort.js';
        enableTableSort('moviesTable');
    </script>
}
