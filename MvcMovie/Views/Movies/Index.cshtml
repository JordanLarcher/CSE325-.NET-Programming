@model MvcMovie.Models.MovieGenreViewModel;


@{
    ViewData["Title"] = "My Movies";
}

<h1 class="my-4">Movies List</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>

<form asp-controller="Movies" asp-action="Index" method="get">
    <p>

        <select asp-for="MovieGenre" asp-items="Model.Genres">
            <option value="">All</option>
        </select>

        <label>Title: <input type="text" name="SearchString" /></label>
        <input type="submit" value="Filter" />
    </p>
</form>


<table class="table" id="moviesTable">
    <thead>
        <tr>
            <th style="cursor:pointer;" data-column="Title">
                @Html.DisplayNameFor(model => model.Movies![0].Title)
            </th>
            <th style="cursor:pointer;" data-column="ReleaseDate">
                @Html.DisplayNameFor(model => model.Movies![0].ReleaseDate)
            </th>
            <th style="cursor:pointer;" data-column="Genre">
                @Html.DisplayNameFor(model => model.Movies![0].Genre)
            </th>
            <th style="cursor:pointer;" data-column="Price">
                @Html.DisplayNameFor(model => model.Movies![0].Price)
            </th>
            <th style="cursor:pointer;" data-column="Rating">
                @Html.DisplayNameFor(model => model.Movies![0].Rating)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Movies!) 
{
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

@section Scripts {
    <script type="module">
        import { enableTableSort } from '/js/table-sort.js';
        enableTableSort('moviesTable');
    </script>
}
